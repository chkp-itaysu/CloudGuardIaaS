{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "virtualNetworkName": {
      "type": "string",
      "metadata": {
        "description": "The name of the virtual network"
      },
      "defaultValue": "vnet"
    },
    "virtualNetworkAddressPrefixes": {
      "type": "array",
      "metadata": {
        "description": "The address prefixes of the virtual network"
      }
    },
    "Subnet1Name": {
      "type": "string",
      "metadata": {
        "description": "The name of the 1st subnet"
      },
      "defaultValue": "Frontend"
    },
    "Subnet1Prefix": {
      "type": "string",
      "metadata": {
        "description": "The address prefix of the 1st subnet"
      },
      "defaultValue": "10.0.1.0/24"
    },
    "Subnet2Name": {
      "type": "string",
      "metadata": {
        "description": "The name of the 2nd subnet"
      },
      "defaultValue": "Backend"
    },
    "Subnet2Prefix": {
      "type": "string",
      "metadata": {
        "description": "The address prefix of the 2nd subnet"
      },
      "defaultValue": "10.0.2.0/24"
    },
    "EAGWSubnetName": {
      "type": "string",
      "metadata": {
        "description": "The name of the external application gateway subnet"
      },
      "defaultValue": "external-application-gateway-subnet"
    },
    "EAGWSubnetPrefix": {
      "type": "string",
      "metadata": {
        "description": "The address prefix of the external application gateway subnet"
      },
      "defaultValue": "10.0.3.0/24"
    },
    "IAGWSubnetName": {
      "type": "string",
      "metadata": {
        "description": "The name of the internal application gateway subnet"
      },
      "defaultValue": "internal-application-gateway-subnet"
    },
    "IAGWSubnetPrefix": {
      "type": "string",
      "metadata": {
        "description": "The address prefix of the internal application gateway subnet"
      },
      "defaultValue": "10.0.4.0/24"
    },
    "vmName": {
      "type": "string"
    },
    "deployNsg": {
      "type": "bool",
      "defaultValue": "true"
    },
    "deployAGW": {
      "type": "bool",
      "defaultValue": "false"
    },
    "AGWDeploymentMode": {
      "type": "string",
      "defaultValue": "StandardApplicationGateway"
	}
  },
  "variables": {
 
    "deployAGW": "[parameters('deployAGW')]",
    "EAGWDeployment": "[and(variables('deployAGW'), or(equals(parameters('AGWDeploymentMode'), 'StandardApplicationGateway'), equals(parameters('AGWDeploymentMode'), 'EApplicationGatewayOnly')))]",
    "IAGWDeployment": "[and(variables('deployAGW'), or(equals(parameters('AGWDeploymentMode'), 'StandardApplicationGateway'), equals(parameters('AGWDeploymentMode'), 'IApplicationGatewayOnly')))]",
    "copy": [
      {
        "name": "toInternalRoutes",
        "count": "[length(parameters('virtualNetworkAddressPrefixes'))]",
        "input": {
          "name": "[concat('To-Internal-',copyIndex('toInternalRoutes'))]",
          "properties": {
            "addressPrefix": "[parameters('virtualNetworkAddressPrefixes')[copyIndex('toInternalRoutes')]]",
            "nextHopType": "None"
          }
        }
      }
    ],
    "localSubnetRoute": [
      {
        "name": "Local-Subnet",
        "properties": {
          "addressPrefix": "[parameters('subnet1Prefix')]",
          "nextHopType": "VnetLocal"
        }
      }
    ],
    "EAGWSubnetRoute": [
      {
        "name": "To-external-application-gateway",
        "properties": {
          "addressPrefix": "[parameters('EAGWSubnetPrefix')]",
          "nextHopType": "VnetLocal"
        }
      }
    ],
    "frontedRoutesArray": "[concat(variables('localSubnetRoute'), variables('toInternalRoutes'))]",
    "routesArray": "[if(variables('EAGWDeployment'), concat(variables('frontedRoutesArray'), variables('EAGWSubnetRoute')), variables('frontedRoutesArray'))]",
    "nsgName": "[concat(parameters('vmName'), '-nsg')]",
    "nsgProperties": {
      "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgName'))]"
    },
    "subnet1RouteTableRef": "[resourceId('Microsoft.Network/routeTables', parameters('subnet1Name'))]",
    "subnet2RouteTableRef": "[resourceId('Microsoft.Network/routeTables', parameters('subnet2Name'))]",
    "EAGWSubnet": [
      {
        "name": "[parameters('EAGWSubnetName')]",
        "properties": {
          "addressPrefix": "[parameters('EAGWSubnetPrefix')]"
        }
      }
    ],
    "IAGWSubnet": [
      {
        "name": "[parameters('IAGWSubnetName')]",
        "properties": {
          "addressPrefix": "[parameters('IAGWSubnetPrefix')]"
        }
      }
    ],
    "basicSubnetsList": [
      {
        "name": "[parameters('subnet1Name')]",
        "properties": {
          "addressPrefix": "[parameters('subnet1Prefix')]",
          "routeTable": {
            "id": "[variables('subnet1RouteTableRef')]"
          }
        }
      },
      {
        "name": "[parameters('subnet2Name')]",
        "properties": {
          "addressPrefix": "[parameters('subnet2Prefix')]",
          "routeTable": {
            "id": "[variables('subnet2RouteTableRef')]"
          }
    }
      }
    ],
    "vnetAGWSubnetsList": "[if(variables('EAGWDeployment'), concat(variables('basicSubnetsList'), variables('EAGWSubnet')), variables('basicSubnetsList'))]",
    "vnetSubnetsList": "[if(variables('IAGWDeployment'), concat(variables('vnetAGWSubnetsList'), variables('IAGWSubnet')), variables('vnetAGWSubnetsList'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Network/routeTables",
      "apiVersion": "2020-06-01",
      "location": "[parameters('location')]",
      "name": "[parameters('subnet1Name')]",
      "properties": {
        "routes": "[variables('routesArray')]"
      }
    },
    {
      "type": "Microsoft.Network/routeTables",
      "apiVersion": "2020-06-01",
      "location": "[parameters('location')]",
      "name": "[parameters('subnet2Name')]",
      "properties": {
        "routes": [
          {
            "name": "To-Internet",
            "properties": {
              "addressPrefix": "0.0.0.0/0",
              "nextHopType": "None"
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2020-06-01",
      "location": "[parameters('location')]",
      "name": "[parameters('virtualNetworkName')]",
      "dependsOn": [
        "[variables('subnet1RouteTableRef')]",
        "[variables('subnet2RouteTableRef')]"
      ],
      "properties": {
        "addressSpace": {
          "addressPrefixes": "[parameters('virtualNetworkAddressPrefixes')]"
        },
        "subnets": "[variables('vnetSubnetsList')]"
      }
    },
    {
      "type": "Microsoft.Network/networkSecurityGroups",
      "condition": "[parameters('deployNsg')]",
      "apiVersion": "2020-06-01",
      "location": "[parameters('location')]",
      "name": "[variables('nsgName')]",
      "properties": {
        "securityRules": [
          {
            "name": "AllowAllInBound",
            "properties": {
              "description": "Allow all inbound connections",
              "protocol": "*",
              "sourcePortRange": "*",
              "destinationPortRange": "*",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": "100",
              "direction": "Inbound"
            }
          }
        ]
      }
    }
  ],
  "outputs": {
    "vnetId": {
      "value": "[resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]",
      "type": "string"
    },
    "vnetAddressPrefixes": {
      "value": "[parameters('virtualNetworkAddressPrefixes')]",
      "type": "array"
    },
    "nsgProperties": {
      "value": "[variables('nsgProperties')]",
      "type": "object"
    }
  }
}
